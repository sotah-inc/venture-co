{
  "name": "@sotah-inc/core",
  "version": "2.0.140",
  "description": "SotAH Core SDK",
  "main": "build/dist/index.js",
  "typings": "build/dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./build",
    "debug": "run-p build:watch lint:watch",
    "start": "node .",
    "lint": "tslint ./src/**/*.ts{,x}",
    "lint:watch": "chokidar --silent ./src/**/*.ts{,x} -c \"npm run -s lint\"",
    "build": "run-s clean build:ts",
    "build:watch": "run-p build:ts:watch lint:watch",
    "build:ts": "tsc",
    "build:ts:watch": "npm run -s build:ts -- --watch",
    "prepublishOnly": "run-s lint build",
    "ar-login": "artifactregistry-auth ./.npmrc"
  },
  "author": "Adrian Parker <adrian@sotah.info>",
  "license": "ISC",
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "google-artifactregistry-auth": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "@types/node": "^14.14.6"
  }
}
