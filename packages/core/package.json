{
  "name": "@sotah-inc/core",
  "version": "v1.0.0",
  "description": "SotAH Core SDK",
  "main": "build/dist/index.js",
  "typings": "build/tsc/index.d.ts",
  "scripts": {
    "clean": "rimraf ./build",
    "debug": "run-p build:watch lint:watch",
    "start": "node .",
    "lint": "tslint ./src/**/*.ts{,x}",
    "lint:watch": "chokidar --silent ./src/**/*.ts{,x} -c \"npm run -s lint\"",
    "build": "tsc",
    "build:clean": "run-s clean build",
    "build:watch": "npm run -s build -- --watch",
    "prepublish": "npm run -s build:clean"
  },
  "author": "Adrian Parker <adrian@sotah.info>",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
