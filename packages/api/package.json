{
  "name": "@sotah/api",
  "version": "v1.0.0",
  "description": "SotAH API SDK",
  "main": "./build/dist/index.js",
  "typings": "build/tsc/index.d.ts",
  "scripts": {
    "clean": "rimraf ./build",
    "debug": "run-p build:watch run:watch",
    "start": "node ./build/dist/index.js",
    "lint": "tslint ./src/**/*.ts{,x}",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "run-s clean build:types build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build/dist --extensions \".ts,.tsx\" --source-maps true",
    "build:watch": "run-p build:watch:types build:watch:js",
    "build:watch:types": "npm run build:types -- --watch",
    "build:watch:js": "npm run build:js -- --watch",
    "run:watch": "nodemon --watch ./build/dist ./build/dist/index.js",
    "gcp-build": "npm run build",
    "prepublish": "npm run build",
    "migrate-up": "typeorm migration:run",
    "migrate-down": "typeorm migration:revert",
    "test": "ava -vs './dist/test/**/*.js'",
    "test:w": "ava -vsw './dist/test/**/*.js'",
    "test-coverage": "nyc --reporter=lcov npm test",
    "test-coverage-report": "nyc report",
    "test-coverage-check": "nyc check-coverage --lines 95 --functions 75 --branches 95",
    "coveralls-coverage": "nyc report --reporter=text-lcov | coveralls",
    "ava": "ava --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ihsw/sotah-api.git"
  },
  "author": "Adrian Parker <adrian@sotah.info>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ihsw/sotah-api/issues"
  },
  "homepage": "https://github.com/ihsw/sotah-api#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@blueprintjs/tslint-config": "^1.6.0",
    "@types/bcrypt": "^2.0.0",
    "@types/compression": "0.0.36",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.5",
    "@types/http-status": "^0.2.29",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/markdown-it": "0.0.6",
    "@types/nunjucks": "^3.1.1",
    "@types/passport": "^0.4.4",
    "@types/passport-jwt": "^3.0.1",
    "@types/speakingurl": "^13.0.2",
    "@types/stripe": "^6.25.10",
    "@types/supertest": "^2.0.2",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.0",
    "ava": "^0.21.0",
    "coveralls": "^2.13.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^11.1.0",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "supertest": "^3.0.0",
    "tslint": "^5.6.0",
    "typescript": "^3.4.3",
    "uuid": "^3.2.1"
  },
  "dependencies": {
    "@google-cloud/error-reporting": "^0.6.0",
    "@google-cloud/firestore": "^1.2.0",
    "@google-cloud/logging-winston": "^0.10.2",
    "@google-cloud/pubsub": "^0.28.1",
    "@google-cloud/storage": "^2.5.0",
    "@sendgrid/mail": "^6.3.1",
    "async-middleware": "^1.2.1",
    "bcrypt": "^2.0.1",
    "bollinger-bands": "^3.0.1",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "fs-extra": "^7.0.1",
    "http-status": "^1.0.1",
    "jsonwebtoken": "^8.2.1",
    "markdown-it": "^8.4.2",
    "moment": "^2.24.0",
    "moving-averages": "^4.0.5",
    "nats": "^0.7.20",
    "nodemon": "^1.17.3",
    "npm": "^6.6.0",
    "nunjucks": "^3.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.4.1",
    "reflect-metadata": "^0.1.12",
    "speakingurl": "^14.0.1",
    "stripe": "^6.28.0",
    "typeorm": "^0.2.7",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "yup": "^0.26.6"
  },
  "nyc": {
    "exclude": []
  }
}
